@using Microsoft.AspNetCore.Identity
@using SSN.Data.Models
@model SSN.Web.ViewModels.UserAcc.PostCreateInputModel
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    this.ViewData["Title"] = "Tell your  story";
}

<style>

    h1 {
        padding-left: 400px;
    }

    #comment-form {
        padding-left: 250px;
        padding-right: 250px;
    }

    #comment-label {
        padding-left: 250px;
    }

    input {
        box-shadow: 0 0 1px 1px black;
    }

    textarea {
        box-shadow: 0 0 1px 1px black;
    }
</style>

    <h1>@this.ViewData["Title"]</h1>

    <form id="comment-form" method="post" asp-controller="UserAcc" asp-action="Create">
        <div class="form-group">
            <input type="hidden" value="@ViewBag.Test" class="form-control" />
            <label asp-for=" Content" id="comment-label" for="exampleFormControlTextarea1">Comment</label>
            <textarea asp-for="Content" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            <button type="submit" class="btn btn-success btn-lg" value="search">ADD Comment</button>
        </div>
    </form>
    <hr /> 



